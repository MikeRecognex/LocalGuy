---
layout: layouts/base.njk
---
<article class="h-entry">
  <header>
    <h1 class="p-name">{{ title }}</h1>
    <div class="guide-meta">
      <span class="difficulty-badge difficulty-{{ difficulty | default("beginner") }}">{{ difficulty | default("beginner") }}</span>
      <span>{{ timeEstimate }}</span>
      <span>{{ category | categoryName }}</span>
    </div>
    <time class="dt-published" datetime="{{ date | isoDate }}">{{ date | readableDate }}</time>
    {% if updated and updated != date %}
    <span class="reading-time">Updated {{ updated | readableDate }}</span>
    {% endif %}
    <span class="reading-time">{{ content | readingTime }}</span>
    {% if tags %}
    <div class="tags">
      {%- for tag in tags %}
        {%- if tag != "guides" %}
        <a href="/tags/{{ tag }}/" rel="tag">#{{ tag }}</a>
        {%- endif %}
      {%- endfor %}
    </div>
    {% endif %}
  </header>

  <div class="e-content">
    {{ content | safe }}
  </div>

  <p class="guide-edit-link">
    <a href="https://github.com/MikeRecognex/LocalGuy/edit/main/{{ page.inputPath }}">Edit this page on GitHub</a>
  </p>

  <footer>
    <a class="u-url" href="{{ page.url }}">Permalink</a>
    <span class="p-author h-card" hidden>
      <a class="u-url p-name" href="{{ site.url }}">{{ site.author }}</a>
    </span>
  </footer>
</article>

{% include "partials/comments.njk" %}
