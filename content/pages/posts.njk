---
title: "All Posts"
layout: layouts/base.njk
permalink: /posts/
---

<h1>All Posts</h1>

<p class="submit-link">Have something to share? <a href="/contribute/">Submit a post</a></p>

{%- set recent = collections.posts | recentDays(3) %}
{%- set older = collections.posts | olderThanDays(3) %}

{%- if recent.length %}
<ul class="post-list">
{%- for post in recent %}
  <li>
    <a href="{{ post.url }}">{{ post.data.title }}</a>
    <time datetime="{{ post.date | isoDate }}">{{ post.date | readableDate }}</time>
    {% if post.data.description %}<p class="summary">{{ post.data.description }}</p>{% endif %}
  </li>
{%- endfor %}
</ul>
{%- endif %}

{%- if older.length %}
{%- for group in older | groupByDate %}
<h2>{{ group.label }}</h2>
<ul class="post-list">
  {%- for post in group.posts %}
  <li>
    <a href="{{ post.url }}">{{ post.data.title }}</a>
    {% if post.data.description %}<p class="summary">{{ post.data.description }}</p>{% endif %}
  </li>
  {%- endfor %}
</ul>
{%- endfor %}
{%- endif %}
