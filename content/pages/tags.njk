---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - posts
    - allPosts
    - _validatePosts
    - guides
permalink: /tags/{{ tag }}/
eleventyComputed:
  title: "Tagged: {{ tag }}"
layout: layouts/base.njk
---

<h1>Tagged "{{ tag }}"</h1>

<ul class="post-list">
{% set taglist = collections[ tag ] %}
{% for post in taglist | reverse %}
  <li>
    <a href="{{ post.url }}">{{ post.data.title or "Note" }}</a>
    <time datetime="{{ post.date | isoDate }}">{{ post.date | readableDate }}</time>
  </li>
{% endfor %}
</ul>
